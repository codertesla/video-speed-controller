{
    "manifest_version": 3,
    "name": "B站、YouTube倍速器",
    "version": "1.3",
    "description": "自由设定 Bilibili 和 YouTube 视频的默认播放速度。",
    "author": "codertesla",
    "homepage_url": "https://github.com/codertesla/video-speed-controller",
    "icons": {
        "16": "icons/icon.png",
        "48": "icons/icon.png",
        "128": "icons/icon.png"
    },
    "permissions": [
        "storage",
        "tabs",
        "webNavigation"
    ],
    "host_permissions": [
        "*://*.bilibili.com/*",
        "*://*.youtube.com/*"
    ],
    "content_scripts": [
        {
            "matches": [
                "*://*.bilibili.com/video/*",
                "*://*.bilibili.com/bangumi/*",
                "*://*.bilibili.com/cheese/*"
            ],
            "js": [
                "constants.js",
                "content-scripts/video-speed-controller.js",
                "content-scripts/bilibili.js"
            ],
            "run_at": "document_idle"
        },
        {
            "matches": [
                "*://*.youtube.com/watch*",
                "*://*.youtube.com/shorts*",
                "*://*.youtube.com/live*"
            ],
            "js": [
                "constants.js",
                "content-scripts/video-speed-controller.js",
                "content-scripts/youtube.js"
            ],
            "run_at": "document_idle"
        }
    ],
    "action": {
        "default_popup": "popup.html",
        "default_icon": {
            "16": "icons/icon.png",
            "48": "icons/icon.png",
            "128": "icons/icon.png"
        },
        "default_title": "B站、YouTube默认播放速度设置"
    },
    "background": {
        "service_worker": "background.js",
        "type": "module"
    },
    "commands": {
        "toggle-speed-control": {
            "suggested_key": {
                "default": "Alt+S"
            },
            "description": "切换视频加速状态"
        }
    },
    "web_accessible_resources": [
        {
            "resources": [
                "icons/bilibili-icon.png",
                "icons/youtube-icon.png"
            ],
            "matches": [
                "*://*.bilibili.com/*",
                "*://*.youtube.com/*"
            ]
        }
    ]
}
